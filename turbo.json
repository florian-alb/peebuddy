{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "DATABASE_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "ROBLOX_CLIENT_ID",
        "ROBLOX_CLIENT_SECRET",
        "BETTER_AUTH_SECRET",
        "VAPID_PRIVATE_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "ROBLOX_CLIENT_ID",
        "ROBLOX_CLIENT_SECRET",
        "BETTER_AUTH_SECRET",
        "VAPID_PRIVATE_KEY",
        "NEXT_PUBLIC_MAPBOX_API_KEY",
        "NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN"
      ]
    },
    "db:generate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:deploy": {
      "cache": false,
      "env": ["DATABASE_URL"]
    }
  }
}
